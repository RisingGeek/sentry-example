{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/axios/axios.ts",
    "jest.config.tsx",
    "next-bundle-analyzer.js",
    "list-common-file.js",
    "platform.js",
    "__scripts__/all-articles-page-script/all-articles.js",
    "__mocks__/styleMock.js",
    "__scripts__/update-url/poc-cms-url-update.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
